{
  "rules": {
    "type-enum": [
      2,
      "always",
      ["build", "chore", "ci", "docs", "style", "feat", "fix", "improvement", "perf", "refactor", "revert", "test"]
    ],
    "body-leading-blank": [1, "always"],
    "header-max-length": [2, "always", 90],
    "subject-empty": [2, "never"],
    "type-case": [2, "always", "lower-case"],
    "type-empty": [2, "never"]
  }
}
